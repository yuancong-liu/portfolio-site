{
  "extends": "@tsconfig/next/tsconfig.json",
  "compilerOptions": {
    "jsx": "preserve",
    "strict": true,
    "downlevelIteration": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"]
    },
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "sourceMap": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
